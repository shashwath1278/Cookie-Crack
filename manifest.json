{
    "manifest_version": 3,
    "name": "Advanced Cookie Monitor",
    "version": "1.1",
    "description": "Monitor, classify, and delete tracking cookies. Blocks third-party trackers automatically.",
    "permissions": ["cookies", "activeTab", "storage", "declarativeNetRequest"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    }
  }
  